    <Button
        android:id="@+id/hist_button"
        android:layout_width="24dp"
        android:layout_height="15dp"
        android:fontFamily="@font/cardo"
        android:padding="14dp"
        android:text="History Log"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:fontFamily="@font/cardo_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hvaclogo"
        app:layout_constraintEnd_toEndOf="@+id/hvaclogo"
        app:layout_constraintStart_toStartOf="@+id/hvaclogo"
        app:layout_constraintTop_toBottomOf="@+id/gradient"
        app:layout_constraintVertical_bias="0.614" />

    <Button
        android:id="@+id/live_button"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/gradient"
        android:padding="14dp"
        android:text="Live Data"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:fontFamily="@font/cardo_bold"
        app:layout_constraintBottom_toTopOf="@+id/button_contact"
        app:layout_constraintEnd_toEndOf="@+id/back_card"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/back_card"
        app:layout_constraintTop_toTopOf="@+id/back_card" />

    <View
        android:id="@+id/live_icon"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/live_news"
        app:layout_constraintEnd_toEndOf="@+id/back_card"
        app:layout_constraintStart_toEndOf="@+id/live_button"
        app:layout_constraintTop_toTopOf="@+id/back_card" />

    <Button
        android:id="@+id/button_contact"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient"
        android:padding="14dp"
        android:text="Contact Technician"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:fontFamily="@font/cardo_bold"
        app:layout_constraintBottom_toBottomOf="@+id/back_card"
        app:layout_constraintEnd_toEndOf="@+id/back_card"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/back_card"
        app:layout_constraintTop_toBottomOf="@+id/live_button" />

    <View
        android:id="@+id/gradient_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/tech_icon"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tech_icon"
        app:layout_constraintBottom_toBottomOf="@+id/back_card"
        app:layout_constraintEnd_toEndOf="@+id/back_card"
        app:layout_constraintStart_toEndOf="@+id/button_contact"
        app:layout_constraintTop_toBottomOf="@+id/live_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>